# EditorConfig configuration for PQC IoT Retrofit Scanner
# https://editorconfig.org/

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# TOML files
[*.toml]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
indent_size = 4

# Docker files
[Dockerfile*]
indent_style = space
indent_size = 4

# Configuration files
[*.{ini,cfg}]
indent_style = space
indent_size = 4

# C/C++ files (for crypto implementations)
[*.{c,h,cpp,hpp}]
indent_style = space
indent_size = 4

# Assembly files
[*.{s,S,asm}]
indent_style = space
indent_size = 4