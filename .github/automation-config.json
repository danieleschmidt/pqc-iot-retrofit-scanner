{
  "automation": {
    "metrics_collection": {
      "enabled": true,
      "schedule": "0 6 * * *",
      "description": "Daily metrics collection at 6 AM UTC",
      "script": "scripts/collect-metrics.py",
      "config_file": ".github/project-metrics.json",
      "output_file": ".github/metrics-results.json",
      "retention_days": 90,
      "failure_notifications": ["slack", "email"]
    },
    "health_monitoring": {
      "enabled": true,
      "schedule": "0 */6 * * *",
      "description": "Health check every 6 hours",
      "script": "scripts/health-monitor.py",
      "config_file": ".github/project-metrics.json",
      "output_file": ".github/health-report.json",
      "alert_thresholds": {
        "critical_issues": 1,
        "warning_issues": 5,
        "degraded_metrics": 3
      },
      "notification_channels": {
        "critical": ["slack", "email", "github_issue"],
        "warning": ["slack"],
        "info": ["email"]
      }
    },
    "performance_benchmarks": {
      "enabled": true,
      "schedule": "0 2 * * 0",
      "description": "Weekly performance benchmarks on Sunday at 2 AM UTC",
      "script": "scripts/benchmark-runner.py",
      "config_file": "benchmark-config.json",
      "output_file": "benchmark-results.json",
      "categories": ["all"],
      "performance_regression_threshold": 20,
      "notification_on_regression": true
    },
    "technical_debt_tracking": {
      "enabled": true,
      "schedule": "0 4 * * 1",
      "description": "Weekly technical debt analysis on Monday at 4 AM UTC",
      "script": "scripts/technical-debt-tracker.py",
      "output_file": "technical-debt-report.json",
      "critical_debt_threshold": 5,
      "effort_hours_threshold": 40,
      "create_issues_for_critical": true
    },
    "dependency_updates": {
      "enabled": true,
      "schedule": "0 8 * * 1",
      "description": "Weekly dependency update check on Monday at 8 AM UTC",
      "tools": ["dependabot", "pip-audit", "safety"],
      "auto_merge_patch": false,
      "auto_merge_minor": false,
      "security_updates_priority": "high",
      "notification_channels": ["slack", "email"]
    },
    "security_scanning": {
      "enabled": true,
      "schedule": "0 3 * * *",
      "description": "Daily security scanning at 3 AM UTC",
      "tools": {
        "sast": ["bandit", "semgrep"],
        "dependency": ["safety", "pip-audit", "osv-scanner"],
        "container": ["trivy", "grype"],
        "secrets": ["trufflehog"]
      },
      "fail_on_high_severity": true,
      "create_issues_for_vulnerabilities": true,
      "notification_channels": ["slack", "email"]
    },
    "code_quality_gates": {
      "enabled": true,
      "trigger": "pull_request",
      "description": "Quality gates for pull requests",
      "requirements": {
        "test_coverage": {
          "minimum": 80,
          "trend": "non_decreasing"
        },
        "code_complexity": {
          "maximum_function": 10,
          "maximum_class": 15
        },
        "security_issues": {
          "critical": 0,
          "high": 0,
          "medium": 2
        },
        "technical_debt": {
          "new_critical_items": 0,
          "max_effort_hours_added": 8
        }
      },
      "enforcement": "blocking",
      "bypass_roles": ["admin", "maintainer"]
    },
    "automated_reporting": {
      "enabled": true,
      "reports": {
        "weekly_summary": {
          "schedule": "0 9 * * 1",
          "description": "Weekly project health summary",
          "recipients": ["tech-leads", "product-managers"],
          "channels": ["email", "slack"],
          "include_metrics": [
            "test_coverage",
            "security_vulnerabilities",
            "build_time",
            "technical_debt_ratio"
          ],
          "include_trends": true,
          "include_recommendations": true
        },
        "monthly_executive": {
          "schedule": "0 10 1 * *",
          "description": "Monthly executive summary",
          "recipients": ["executives", "stakeholders"],
          "channels": ["email", "dashboard"],
          "format": "executive",
          "include_business_metrics": true,
          "include_comparative_analysis": true
        },
        "quarterly_retrospective": {
          "schedule": "0 11 1 */3 *",
          "description": "Quarterly retrospective report",
          "recipients": ["all-team"],
          "channels": ["email", "wiki"],
          "include_goal_progress": true,
          "include_lessons_learned": true,
          "include_next_quarter_planning": true
        }
      }
    },
    "alerting": {
      "channels": {
        "slack": {
          "webhook_url": "${SLACK_WEBHOOK_URL}",
          "default_channel": "#pqc-scanner-alerts",
          "channels_by_severity": {
            "critical": "#pqc-scanner-critical",
            "warning": "#pqc-scanner-warnings",
            "info": "#pqc-scanner-info"
          },
          "message_format": "detailed",
          "include_charts": false,
          "rate_limit": "5_per_hour"
        },
        "email": {
          "smtp_server": "${SMTP_SERVER}",
          "smtp_port": 587,
          "from_address": "noreply@pqc-scanner.example.com",
          "recipients": {
            "tech-leads": ["${TECH_LEAD_EMAIL}"],
            "product-managers": ["${PRODUCT_MANAGER_EMAIL}"],
            "executives": ["${EXECUTIVE_EMAIL}"],
            "all-team": ["${TEAM_EMAIL_LIST}"]
          },
          "format": "html",
          "include_attachments": true
        },
        "github_issue": {
          "repository": "${GITHUB_REPOSITORY}",
          "token": "${GITHUB_TOKEN}",
          "labels": {
            "critical": ["critical", "automated", "health-alert"],
            "warning": ["warning", "automated", "monitoring"],
            "info": ["info", "automated", "metrics"]
          },
          "assignees": {
            "critical": ["${TEAM_LEAD}"],
            "warning": [],
            "info": []
          },
          "auto_close_resolved": true
        }
      },
      "escalation": {
        "critical": {
          "initial_notification": "immediate",
          "escalation_after": "15_minutes",
          "escalation_recipients": ["on-call", "tech-leads"],
          "maximum_escalations": 3
        },
        "warning": {
          "initial_notification": "immediate",
          "escalation_after": "2_hours",
          "escalation_recipients": ["tech-leads"],
          "maximum_escalations": 1
        }
      },
      "suppression": {
        "duplicate_window": "1_hour",
        "max_alerts_per_hour": 10,
        "quiet_hours": {
          "enabled": false,
          "start": "22:00",
          "end": "06:00",
          "timezone": "UTC",
          "exceptions": ["critical"]
        }
      }
    },
    "data_retention": {
      "metrics_data": {
        "raw_data": "1_year",
        "aggregated_daily": "3_years",
        "aggregated_weekly": "5_years",
        "aggregated_monthly": "10_years"
      },
      "health_reports": "6_months",
      "benchmark_results": "2_years",
      "debt_reports": "1_year",
      "alert_history": "1_year",
      "log_files": "3_months"
    },
    "backup_and_recovery": {
      "backup_schedule": "0 1 * * *",
      "backup_location": "${BACKUP_STORAGE_URL}",
      "backup_retention": {
        "daily": "30_days",
        "weekly": "12_weeks",
        "monthly": "12_months"
      },
      "backup_verification": true,
      "recovery_testing": "monthly"
    }
  },
  "integrations": {
    "github": {
      "api_token": "${GITHUB_TOKEN}",
      "repository": "${GITHUB_REPOSITORY}",
      "features": {
        "commit_status_checks": true,
        "pull_request_comments": true,
        "issue_creation": true,
        "release_notes": true,
        "wiki_updates": true
      }
    },
    "codecov": {
      "token": "${CODECOV_TOKEN}",
      "project_name": "pqc-iot-retrofit-scanner",
      "features": {
        "coverage_reporting": true,
        "coverage_trends": true,
        "pr_comments": true
      }
    },
    "sonarqube": {
      "server_url": "${SONARQUBE_URL}",
      "token": "${SONARQUBE_TOKEN}",
      "project_key": "pqc-iot-retrofit-scanner",
      "features": {
        "code_quality": true,
        "security_hotspots": true,
        "technical_debt": true,
        "maintainability": true
      }
    },
    "prometheus": {
      "enabled": false,
      "endpoint": "${PROMETHEUS_ENDPOINT}",
      "metrics_prefix": "pqc_scanner",
      "scrape_interval": "30s",
      "custom_metrics": [
        "firmware_scans_total",
        "vulnerabilities_detected_total",
        "patch_generation_duration_seconds"
      ]
    },
    "grafana": {
      "enabled": false,
      "url": "${GRAFANA_URL}",
      "api_key": "${GRAFANA_API_KEY}",
      "dashboards": {
        "project_health": "pqc-scanner-health",
        "performance_metrics": "pqc-scanner-performance",
        "security_overview": "pqc-scanner-security"
      }
    }
  },
  "feature_flags": {
    "experimental_metrics": false,
    "advanced_security_scanning": true,
    "ml_based_complexity_analysis": false,
    "automated_patch_suggestions": false,
    "performance_profiling": true,
    "cost_tracking": false
  },
  "environment_specific": {
    "development": {
      "automation": {
        "enabled": false,
        "dry_run": true,
        "reduced_schedules": true
      },
      "notifications": {
        "channels": ["slack"],
        "severity_filter": "warning"
      }
    },
    "staging": {
      "automation": {
        "enabled": true,
        "dry_run": false,
        "full_schedules": true
      },
      "notifications": {
        "channels": ["slack", "email"],
        "severity_filter": "info"
      }
    },
    "production": {
      "automation": {
        "enabled": true,
        "dry_run": false,
        "full_schedules": true
      },
      "notifications": {
        "channels": ["slack", "email", "github_issue"],
        "severity_filter": "info"
      }
    }
  },
  "compliance": {
    "data_privacy": {
      "anonymize_personal_data": true,
      "data_retention_compliance": "GDPR",
      "audit_logging": true
    },
    "security_standards": {
      "soc2": {
        "enabled": true,
        "audit_trail": true,
        "access_controls": true
      },
      "iso27001": {
        "enabled": false,
        "documentation": true,
        "risk_assessments": true
      }
    }
  }
}